#
# Basic var for special product
#

SDK_DIR:=$(BUILD_DIR)/../../bcm675x
TOOLCHAIN_DIR:=$(SDK_DIR)/toolchain

HOSTTOOL_CFLAGS += CONFIG_MKFLASH_NO_NEED=y

# Toolchain 
TOOLCHAIN_NAME:=crosstools-arm-gcc-5.5-linux-4.1-glibc-2.26-binutils-2.28.1
TOOLCHAIN_PACKAGE:=$(TOOLCHAIN_NAME).Rel1.10.tar.bz2

TOOLCHAIN_ROOT_DIR:=$(TOOLCHAIN_DIR)/opt/toolchains/$(TOOLCHAIN_NAME)
TOOLCHAIN_PREFIX:=arm-buildroot-linux-gnueabi

# wireless toolchain


# SDK
PROFILE:=TP6750
SDK_NAME:=bcm963xx_router
SDK_ROOT_DIR:=$(SDK_DIR)/$(SDK_NAME)
SDK_TARGET_DIR:=$(SDK_ROOT_DIR)/targets/$(PROFILE)
SDK_BUILD_DIR:=$(SDK_ROOT_DIR)
SDK_TOOLS_PATH:=$(SDK_ROOT_DIR)/hostTools
SDK_BIN_DIR:=$(SDK_ROOT_DIR)/targets/TP6750/
SDK_KERNEL_DIR:=$(SDK_ROOT_DIR)/kernel/linux-4.1
SDK_ROOTFS_DIR:=$(SDK_ROOT_DIR)/targets/TP6750/fs

# iplatform
LUAC?=$(PLATFORM_DIR)/staging_dir/host/bin/luac
LUA_PATH?=$(IMAGE_ROOTFS_DIR)/usr/lib/lua

# export 
export ORIGINAL_PATH:=$(PATH)
export PATH:=$(ORIGINAL_PATH):$(TOOLCHAIN_ROOT_DIR)/bin:$(SDK_TOOLS_PATH):$(TP_TOOLS_PATH)
export LD_LIBRARY_PATH:=$(TOOLCHAIN_ROOT_DIR)/lib
export TOOLCHAIN_BASE=$(TOOLCHAIN_DIR)/opt/toolchains


# fix kernel's vermagic
export LOCALVERSION=

# Image
IMAGE_ROOTFS_DIR:=$(IMAGE_DIR)/rootfs
IMAGE_BOOTFS_DIR:=$(IMAGE_DIR)/bootfs
IMAGE_TMP_DIR:=$(IMAGE_DIR)/tmpfs

# Other 

IMAGE_NAME_PREFIX=ax1500v1

export SDK_ROOT_DIR

export HOSTTOOLS_PB_DIR:=$(BUILD_DIR)/hostTools
